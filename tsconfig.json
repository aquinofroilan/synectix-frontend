{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "src",
    "paths": {
      "@shared/*": [
        "app/shared/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@environments/*": [
        "environments/*"
      ],
      "@features/*": [
        "app/features/*"
      ],
      "@spartan-ng/helm/button": [
        "./../libs/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/helm/utils": [
        "./../libs/ui/ui-utils-helm/src/index.ts"
      ],
      "@spartan-ng/helm/card": [
        "./../libs/ui/ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/helm/checkbox": [
        "./../libs/ui/ui-checkbox-helm/src/index.ts"
      ],
      "@spartan-ng/helm/icon": [
        "./../libs/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/helm/input": [
        "./../libs/ui/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/helm/select": [
        "./../libs/ui/ui-select-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
